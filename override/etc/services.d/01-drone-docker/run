#!/usr/bin/with-contenv bash

if [[ -f "$DRONE_CONF" ]]; then
  . "$DRONE_CONF"
fi

export DRONE_LOG_FILE=${DRONE_LOG_FILE:-"$CONF_ROOT/log/drone-docker-runner.log"}
export DRONE_RPC_PROTO=${DRONE_RPC_PROTO:-http}
export DRONE_RPC_HOST=${DRONE_RPC_HOST:-localhost:8080}
export DRONE_RUNNER_OS=${DRONE_RUNNER_OS:-"linux"}
export DRONE_RUNNER_ARCH=${DRONE_RUNNER_ARCH:-"amd64"}
export DRONE_RUNNER_NAME="$(hostname)-docker"}

if [[ -n "${DRONE_RPC_SECRET}" && -n "${DRONE_RPC_HOST}" && -z "${DRONE_AGENT_DISABLED}" && -z "${DRONE_DOCKER_DISABLED}" ]]; then
  exec s6-setuidgid guardian /usr/bin/drone-runner-docker
else
  sleep 30
fi
